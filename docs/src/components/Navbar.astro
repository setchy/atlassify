---
import { Icon } from "astro-icon/components";

import GitHubRepo from "~/components/GitHubRepo.astro";
import { siteMetadata } from "~/constants";

const { currentPathname } = Astro.props;
const isHomepage = currentPathname === "/";
---

<nav class:list={["py-8 px-8", isHomepage && "bg-atlassify-docs-hero"]}>
  <div class="container max-w-5xl lg:mx-auto">
    <div
      class="bg-atlassify-docs-navbar rounded-lg flex items-center justify-between px-8 lg:px-12 py-4 lg:py-6"
    >
      <div class="flex items-center flex-shrink-0 text-white mr-6">
        <a href="/" aria-label={siteMetadata.title}>
          <Icon name="atlassify-white" size={48} class="w-8 sm:w-12" />
        </a>
      </div>

      <div class="flex justify-end">
        <ul class="flex flex-row items-center list-none space-x-4">
          {
            siteMetadata.menuLinks.map((item) => (
              <li>
                <a
                  href={item.path}
                  class:list={[
                    "py-1.5 lg:py-2 px-2 lg:px-3",
                    "font-light",
                    currentPathname === item.path
                      ? "border rounded-lg border-white"
                      : "",
                  ]}
                >
                  {item.name}
                </a>
              </li>
            ))
          }

          <li>
            <GitHubRepo />
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
